<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">


    <RelativeLayout
        android:id="@+id/topFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/news_recycler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/etherAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/navy"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:textSize="20sp"
            android:text="Amount: " />

        <HorizontalScrollView
            android:id="@+id/scrollView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollHorizontally="true"
            android:layout_toEndOf="@+id/etherAmount"
            android:layout_alignBottom="@+id/etherAmount">

        <EditText
            android:id="@+id/amountValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/etherAmount"
            android:layout_alignBottom="@+id/etherAmount"
            android:text="1"
            android:textSize="20sp"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="14sp"
            android:autoSizeStepGranularity="2sp"
            android:textColor="@color/navy"
            app:backgroundTint="@color/navy"
            android:inputType="numberDecimal"
            android:scrollHorizontally="true"
            android:textAlignment="viewEnd"
            android:ems="5"
            android:maxLength="9"
            android:imeOptions="actionDone"/>

        </HorizontalScrollView>

        <TextView
            android:id="@+id/usdValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etherAmount"
            android:paddingBottom="20dp"
            android:paddingStart="10dp"
            android:text="Value: $"
            android:textSize="20sp"
            android:textColor="@color/navy"/>

        <TextView
            android:id="@+id/amountUSD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scrollView"
            android:layout_toEndOf="@+id/usdValue"
            android:layout_alignBottom="@+id/usdValue"
            android:layout_alignEnd="@id/scrollView"
            android:text="50"
            android:textSize="20sp"
            android:textColor="@color/navy"
            android:textAlignment="viewEnd"/>

        <Spinner
            android:id="@+id/units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/scrollView"
            android:drawSelectorOnTop="true"
            android:entries="@array/unitOptions"
            android:spinnerMode="dropdown"
            android:dropDownWidth="wrap_content"
            android:textAlignment="textStart"
            android:paddingBottom="5dp"
            android:background="@drawable/border_4"
            android:dropDownVerticalOffset="10dp"/>

        <TextView
            android:id="@+id/chartIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:drawableTop="@drawable/chart"
            android:text="Show Chart"
            android:textColor="@color/navy"
            android:background="@drawable/border_5"
            android:foreground="?attr/selectableItemBackground"/>



    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/news_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="false"
        android:layout_marginTop="175dp"
        android:layout_marginBottom="75dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/chartContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="175dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>