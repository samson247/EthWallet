<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Views.Fragments.CreateAccountFragment">

    <EditText
        android:id="@+id/editTextNewWalletName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Wallet Name"
        android:textColorHint="@color/navy"
        android:layout_marginLeft="20dp"
        app:backgroundTint="@color/navy"
        android:imeOptions="actionNext"/>

    <EditText
        android:id="@+id/editTextNewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:text=""
        android:hint="Password"
        android:textColorHint="@color/navy"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        app:backgroundTint="@color/navy"
        android:imeOptions="actionDone"/>

    <EditText
        android:id="@+id/editTextPrivateKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="none"
        android:textIsSelectable="false"
        android:text=""
        android:hint="Private Key"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="140dp"
        android:visibility="visible"/>

    <!--<TextView
        android:id="@+id/privateKeyPlaceHolder"
        android:layout_width="210dp"
        android:layout_height="47dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="140dp"
        android:ems="10"
        android:hint="Private Key"
        android:textSize="18sp" />-->

    <CheckBox
        android:id="@+id/checkboxExisting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add existing account"
        android:textColor="@color/bt_text_blue"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="140dp"
        android:buttonTint="@color/navy" />

    <Button
        android:id="@+id/createAccountButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="30dp"
        android:text="Create Wallet" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="80dp"
        android:background="@color/grey"
        app:srcCompat="@drawable/info"/>


</FrameLayout>