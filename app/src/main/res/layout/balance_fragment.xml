<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/navy">

    <TextView
        android:id="@+id/balanceText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="100010101 Gwei"
        android:textColor="@color/grey"
        android:textSize="20sp"
        android:paddingStart="60dp"
        android:paddingTop="10dp"/>

    <TextView
        android:id="@+id/balanceText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/balanceText1"
        android:text="100010101000 Wei"
        android:textColor="@color/grey"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:paddingStart="60dp"/>

    <TextView
        android:id="@+id/usdAmountText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/balanceText2"
        android:text="100010101 Gwei"
        android:textColor="@color/grey"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:paddingStart="60dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>