<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_navigation"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@color/navy"
    android:weightSum="4"
    tools:context=".Views.Fragments.BottomNavigationFragment">

    <RelativeLayout
        android:id="@+id/transactionButton"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="75dp"
        android:clickable="true"
        android:background="@color/navy"
        android:foreground="?attr/selectableItemBackground">


        <ImageView
            android:id="@+id/ethereumLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="20dp"
            app:srcCompat="@drawable/ether_logo"/>

        <TextView
            android:id="@+id/transactionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transactions"
            android:textColor="@color/grey"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ethereumLogo"
            android:paddingBottom="5dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/contactsButton"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="75dp"
        android:clickable="true"
        android:background="@color/navy"
        android:foreground="?attr/selectableItemBackground">


        <ImageView
            android:id="@+id/contactsLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="20dp"
            app:srcCompat="@drawable/address_book"/>

        <TextView
            android:id="@+id/contactsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacts"
            android:textColor="@color/grey"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/contactsLogo"
            android:paddingBottom="5dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/newsButton"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="75dp"
        android:clickable="true"
        android:background="@color/navy"
        android:foreground="?attr/selectableItemBackground">


        <ImageView
            android:id="@+id/newsLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="18dp"
            app:srcCompat="@drawable/news"/>

        <TextView
            android:id="@+id/newsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="News"
            android:textColor="@color/grey"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/newsLogo"
            android:paddingBottom="5dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/accountButton"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="75dp"
        android:clickable="true"
        android:background="@color/navy"
        android:foreground="?attr/selectableItemBackground">


        <ImageView
            android:id="@+id/accountLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="20dp"
            app:srcCompat="@drawable/account"/>

        <TextView
            android:id="@+id/accountTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account"
            android:textColor="@color/grey"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/accountLogo"
            android:paddingBottom="5dp"/>

    </RelativeLayout>
</LinearLayout>