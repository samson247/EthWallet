<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toTopOf="@+id/news_recycler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/etherAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ether Amount: " />

        <EditText
            android:id="@+id/amountValue"
            android:layout_width="42dp"
            android:layout_height="71dp"
            android:layout_marginLeft="63dp"
            android:layout_toRightOf="@+id/etherAmount"
            android:baselineAligned="false"
            android:text="1" />

        <TextView
            android:id="@+id/usdValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etherAmount"
            android:text="USD value: " />

        <TextView
            android:id="@+id/amountUSD"
            android:layout_width="31dp"
            android:layout_height="38dp"
            android:layout_below="@+id/amountValue"
            android:layout_marginTop="-19dp"
            android:layout_toRightOf="@+id/usdValue"
            android:text="50" />



    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/news_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="false"
        android:layout_marginTop="175dp"
        tools:layout_editor_absoluteX="206dp"
        tools:layout_editor_absoluteY="520dp" />
</androidx.constraintlayout.widget.ConstraintLayout>